cabal-version: 3.0

name: fourmolu-web
version: 0

executable fourmolu-web
    main-is: site.hs
    hs-source-dirs: ./ src/
    default-language: GHC2021
    ghc-options: -Wall -Wunused-packages

    build-depends:
        , aeson
        , base
        , bytestring
        , Cabal-syntax
        , cmark-gfm-simple
        , containers
        , filepath
        , fourmolu
        , fourmolu-config
        , ghc-syntax-highlighter-themed
        , hakyll
        , process
        , text
